{
    "name": "swisnl/laravel-elastic",
    "type": "library",
    "description": "Laravel integration for elastic search",
    "keywords": [
        "swisnl",
        "laravel-elastic"
    ],
    "homepage": "https://github.com/swisnl/laravel-elastic",
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas Wijnands",
            "email": "twijnands@swis.nl",
            "homepage": "https://www.swis.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "elasticsearch/elasticsearch": "^8.6.2",
        "laravel/framework": "^9.52|^10.0",
        "spatie/laravel-package-tools": "^1.15"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "orchestra/testbench": "^7.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.3",
        "nunomaduro/larastan": "^2.0.1"
    },
    "autoload": {
        "psr-4": {
            "Swis\\Laravel\\Elastic\\": "src"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "check-style": "php-cs-fixer fix --dry-run -v",
        "fix-style": "php-cs-fixer fix"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Swis\\Laravel\\Elastic\\LaravelElasticServiceProvider"
            ],
            "aliases": {
                "SwisElastic": "Swis\\Laravel\\Elastic\\Facades\\Elastic"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
